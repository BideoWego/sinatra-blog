<!-- Header Site Title -->
<header class="page-header">
  <h1 class="site-title">
    <a href="/projects">
      Projects
    </a>
  </h1>
</header>


<!-- Project Index -->
<div id="projects" class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">


    <% [
      {
        :title => 'Danebook',
        :description => 'A mock social network app for the Danish of course!',
        :github => 'https://github.com/BideoWego/danebook',
        :deployment => 'https://bideowego-danebook.herokuapp.com/signup'
      },
      {
        :title => 'Viking Store',
        :description => 'A mock eCommerce store for vikings to by the essentials.',
        :github => 'https://github.com/BideoWego/project_viking_store',
        :deployment => 'https://bideowego-viking-store.herokuapp.com/admin/analytics'
      },
      {
        :title => 'Mousevc',
        :description => 'A tiny MVC framework to jump start CLI apps. Gemified.',
        :github => 'https://github.com/BideoWego/mousevc',
        :deployed => 'https://rubygems.org/gems/mousevc'
      },
      {
        :title => 'Slack Pomodoro Timer',
        :description => 'A remote CLI pomodoro timer for Slack',
        :github => 'https://github.com/BideoWego/slack_pomodoro_timer',
        :deployed => 'https://rubygems.org/gems/slack_pomodoro_timer'
      },
      {
        :title => 'Tetris',
        :description => 'The classic game brought to life in the browser with JavaScript.',
        :github => 'https://github.com/BideoWego/project_tetris_js',
        :deployment => 'https://rawgit.com/BideoWego/project_tetris_js/master/rawgit.html'
      },
      {
        :title => 'Asteroids',
        :description => 'The arcade game rendered with HTML, CSS and JavaScript (Works best in Chrome).',
        :github => 'https://github.com/BideoWego/assignment_js_oop',
        :deployment => 'https://rawgit.com/BideoWego/assignment_js_oop/master/rawgit.html'
      },
      {
        :title => 'Snake',
        :description => 'Snake hungry, want eat.',
        :github => 'https://github.com/BideoWego/project_game_center_browser',
        :deployment => 'https://rawgit.com/BideoWego/project_game_center_browser/rawgit/index.html'
      },
      {
        :title => 'Hangman',
        :description => 'Can you guess the word before the little ASCII character guy gets it?',
        :github => 'https://github.com/BideoWego/hangman',
        :deployment => 'https://bideowego-hangman.herokuapp.com'
      },
      {
        :title => 'Blackjack',
        :description => '21 to win.',
        :github => 'https://github.com/BideoWego/assignment_sinatra_blackjack',
        :deployment => 'https://bideowego-blackjack.herokuapp.com'
      }
    ].each do |project| %>
    
      <!-- Project -->
      <div class="project media">
        <div class="media-left">
          <a href="#">
            <img class="media-object" src="https://s3.amazonaws.com/bw.bideowego/images/bw.png" alt="Image">
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading">
            <a href="<%= project[:deployment] %>">
              <%= project[:title] %>
            </a>
            <small>
              <i class="fa fa-folder"></i>
            </small>
          </h4>
          <div class="excerpt">
            <p>
              <%= project[:description] %>

              Checkout the code on Github
              <a href="<%= project[:github] %>">here</a>
              .

              View the deployed app
              <a href="<%= project[:deployment] %>">here</a>
              .
            </p>
          </div>
        </div>
      </div>

    <% end %>



  </div>
</div><!-- projects -->



